{
    "name": "transactionSchema",
    "description": "The expected body of the POST request to create a transaction",
    "type": "object",
    "properties": {
        "date":  {
            "type": "string",
            "pattern": "^((?:19|20)\\d{2})\\-(1[012]|0?[1-9])\\-(3[01]|[12][0-9]|0?[1-9])\\s([01][0-9]|2[0-4]):[0-5][0-9]:[0-5][0-9]$"
        },
        "amount": {
            "type": "number",
            "pattern": "^\\d*(\\.\\d{1,2})?$"
        },
        "notes": { 
            "type": "string"
        },
        "cleared": {
            "type": "boolean"
        },
        "category_id": {
            "type": "integer"
        },
        "account_id": {
            "type": "integer"
        },
        "payee_id": {
            "type": ["integer", "null"]
        }
    },
    "required": ["amount", "category_id", "account_id"]
}